if [[ $OSTYPE == "cygwin" ]] ; then

    alias ls='ls -la --color=always'
    alias open='explorer.exe'
    alias unixall='find . -type f -not -path "*/node_modules/*" -not -path "*/.git/*" -print0 | xargs -0 dos2unix'

    # TELEPORTATION
    alias csd='cd $SYSTEMDRIVE'
    alias cup='cd $USERPROFILE'
    alias ccode='cd $USERPROFILE/code'
    alias cnotes='cd $USERPROFILE/notes'
    alias cconfig='cd $USERPROFILE/config'
    alias cpf='cd "$PROGRAMFILES"'

fi
